<div>
  <h1 class="text-lg font-semibold"><%= @article.title %></h1>
  <p><%= @article.body %></p>
  <button class="bg-yellow-500 hover:bg-yellow-600 text-white text-sm font-medium py-1 px-2 rounded">
    <%= link_to "Edit", edit_article_path(@article) %>
  </button>
  <button class="bg-red-500 hover:bg-red-600 text-white text-sm font-medium py-1 px-2 rounded">
    <%= link_to "Destroy", article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  </button>
  <h3 class="text-xl font-semibold">Comments</h2>
  <%= render @article.comments %>
  <h3>Add a comment:</h2>
  <%= render "comments/form", article: @article %>
</div>