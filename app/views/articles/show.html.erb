<div>
  <h1 class="text-lg font-semibold"><%= @article.title %></h1>
  <p><%= @article.body %></p>
  <button class="bg-yellow-500 hover:bg-yellow-600 text-white text-sm font-medium py-1 px-2 rounded">
    <%= link_to "Edit", edit_article_path(@article) %>
  </button>
  <button class="bg-red-500 hover:bg-red-600 text-white text-sm font-medium py-1 px-2 rounded">
    <%= link_to "Destroy", article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  </button>
  <h2>Comments</h2>
  <% @article.comments.each do |comment| %>
    <p>
      <strong>Commenter:</strong>
      <%= comment.commenter %>
    </p>
    <p>
      <strong>Comment:</strong>
      <%= comment.body %>
    </p>
  <% end %>
  <h2>Add a comment:</h2>
  <%= form_with model: [ @article, @article.comments.build ] do |form| %>
    <p>
      <%= form.label :commenter %><br>
      <%= form.text_field :commenter %>
    </p>
    <p>
      <%= form.label :body %><br>
      <%= form.text_area :body %>
    </p>
    <p>
      <%= form.submit %>
    </p>
  <% end %>